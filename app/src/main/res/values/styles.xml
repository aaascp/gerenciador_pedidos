<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="OrdersList.Base" parent="AppTheme">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="OrdersList.Labels" parent="OrdersList.Base">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OrdersList.Values" parent="OrdersList.Base">
        <item name="android:textColor">@color/secundary_text</item>
    </style>

</resources>
