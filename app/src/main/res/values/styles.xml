<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="actionOverflowButtonStyle">@style/ToolbarOverflowIcon</item>
    </style>

    <style name="Dialog" parent="AppTheme">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>


    <style name="ToolbarOverflowIcon" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="OrdersList.Base" parent="AppTheme">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="OrdersList.Labels" parent="OrdersList.Base">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OrdersList.Values" parent="OrdersList.Base">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="ToolbarStyle" parent="AppTheme">
        <item name="titleTextAppearance">@style/Toolbar.TextAppearance.Base</item>
    </style>

    <style name="ToolbarStyle.Highlighted" parent="ToolbarStyle">
        <item name="titleTextAppearance">@style/Toolbar.TextAppearance.Highlighted</item>
    </style>

    <style name="ToolbarStyle.Small" parent="ToolbarStyle">
        <item name="titleTextAppearance">@style/Toolbar.TextAppearance.Small</item>
    </style>

    <style name="Toolbar.TextAppearance.Base" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="Toolbar.TextAppearance.Highlighted" parent="Toolbar.TextAppearance.Base">
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="Toolbar.TextAppearance.Expanded" parent="Toolbar.TextAppearance.Base">
        <item name="android:textSize">@dimen/large_title_text_size</item>
    </style>

    <style name="Toolbar.TextAppearance.Small" parent="Toolbar.TextAppearance.Base">
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

</resources>
